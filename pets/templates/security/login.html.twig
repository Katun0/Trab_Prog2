{% extends 'base.html.twig' %}

{% block title %}PETS Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock %}

{% block body %}
<div class='container'>
    <div class="center">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <h1><span>P.E.T.S</span> Login</h1>
            
            <div class='input-box'>
                <label class="email-label" for="inputEmail">Email</label>
                    <input type="email" placeholder='exemplo@exemplo.com.br' value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class='input-box'>
                <label class='pass-label' for="inputPassword">Senha</label>
                <input type="password" placeholder='Sua Senha' name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn" type="submit">
                Acessar
            </button>
        </form>

        <div class='btn-register'>
            <a href="{{ path('app_register') }}">Registre-se</a>
        </div>
    </div>

    <div class="photo">
        <img src="{{ asset('images/lhama.jpg') }}" alt="Imagem de fundo" class="photo-img">
    </div>
</div>

{% endblock %}