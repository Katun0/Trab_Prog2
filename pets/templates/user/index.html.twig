{% extends 'base.html.twig' %}


{% block title %}Usuarios{% endblock %}


{% block body %}
<h1> {{ titulo }} </h1>

<button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#formSection" aria-expanded="false" aria-controls="formSection">
  Novo
</button>
{{ msg }}


<div class="collapse" id="formSection">
  <div class="card card-body mt-3">
    <form>
        {{ form_start(userForm) }}
      <div class="mb-3">
        <h2>Cadastro de Usuario</h2>
      </div>
      <div class="mb-3">
        {{ form_row(userForm.nome) }}
        {{ form_row(userForm.email) }}
        {{ form_row(userForm.plainPassword) }}
        <button type='submit' class='btn btn-success'>Salvar</button>
      </div>
      {{ form_end(userForm) }}
    </form>
  </div>
</div>

<table class='table'>
        <thead>
            <tr>
                <td>Id</td>
                <td>Nome</td>
                <td>Email</td>
            </tr>
        </thead>
        <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td>{{ usuario.Id }}</td>
                    <td>{{ usuario.Nome }}</td>
                    <td>{{ usuario.Email }}</td>
                    <td>
                        <a href="#" class="btn btn-primary">Editar</a>
                        <a href="#" class="btn btn-primary">Excluir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
